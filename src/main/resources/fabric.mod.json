{
  "schemaVersion": 1,
  "id": "repeatrecipe",
  "version": "${version}",

  "name": "Repeat Recipe",
  "description": "Adds a keybind to repeat the last recipe clicked on in the recipe book.",
  "authors": [
    "zachac"
  ],
  "contact": {
    "email": "zachac96@gmail.com",
    "sources": "https://github.com/Zachac/RepeatRecipe"
  },

  "license": "CC0-1.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": ["net.fabricmc.repeatrecipe.RepeatRecipe"]
  },
  "mixins": [
    "repeatrecipe.mixins.json",
    "repeatrecipe.accessors.json"
  ],

  "depends": {
    "fabric-key-binding-api-v1": "*",
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
